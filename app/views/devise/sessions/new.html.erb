

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

		<h2 class="text-center">Sign in</h2>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", html_input: {class: "form-control"} %>
    <%= f.input :password, required: false, label: false, placeholder: "Password", html_input:{class: "form-control"} %>
   

    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
